<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", onkeyup: "counterFunction()" %>
  </div>
  <div id="characters_left" class="">140 characters left</div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>